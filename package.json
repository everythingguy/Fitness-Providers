{
  "name": "react-express-template",
  "version": "1.0.0",
  "description": "a template for apps using react, express, scss, tailwind, ejs, mongoose and typescript.",
  "main": "app.js",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "start": "node dist/app.js",
    "client": "npm start --prefix client",
    "server": "nodemon --config nodemon.json src/app.ts",
    "server:debug": "nodemon --config nodemon.json --inspect-brk src/app.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "coverage": "jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.duraken.com/everythingguy/react-express-template.git"
  },
  "author": "everythingguy",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.1",
    "@types/connect-flash": "^0.0.37",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.0.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^5.5.8",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.6.1",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.3",
    "babel-jest": "^26.6.0",
    "concurrency": "^0.1.4",
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "jest": "26.6.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.5",
    "ts-jest": "^26.0.0",
    "ts-node": "^10.2.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-validator": "^5.3.1",
    "fs": "^0.0.1-security",
    "mongoose": "^5.13.7",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "validator": "^10.11.0"
  }
}